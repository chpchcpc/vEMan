# Scans ESX for available networks
F_SCANNET(){
	F_GETCFG
	unset NETS
	NETS="$(https_proxy="" $XHOSTINF --sessionfile $AUTHSESS --server \"$SRV\" --fields net |grep -i Networks | sed 's/\:[[:space:]]*/|/g' |cut -d '|' -f2 | sed 's/,[[:space:]]*/|/g' |tr -d '$|')"
	echo "DEBUG: detected networks: >$NETS<"
	[ -z "$NETS" ]&& echo "DEBUG: WARNING CANNOT DETECT NETWORKS" && STORES="$LASTNET (unknown)"

}
export -f F_SCANNET
